<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="res_partner_visitor_view_form_inherit_jm" model="ir.ui.view">
            <field name="name">res.partner.visitor.view.form.inherit.jm</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="action_view_visits" type="object" icon="fa-arrows-v"
                            invisible="not (is_visitor == True)">
                        <div class="o_stat_info">
                            <field name="visitor_count" class="o_stat_value"/>
                            <span class="o_stat_text">Visits</span>
                        </div>
                    </button>
                </div>
                <xpath expr="//field[@name='category_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="is_visitor"/>
                </xpath>
                <notebook position="inside">
                    <page string="Personal visitor ID" invisible="not (is_visitor == True)">
                        <group>
                            <group>
                                <field name="type_visitor_identification_id"/>
                                <field name="visitor_personal_identification"/>
                            </group>
                        </group>
                        <group string="Personal ID imagen">
                            <group>
                                <field name="personal_id_imagen" widget="image" class="o_course_image" string="Face A"/>
                            </group>
                            <group>
                                <field name="personal_id_imagen_b" widget="image" class="o_course_image" string="Face B"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

